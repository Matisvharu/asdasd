---
import "../styles/Skills.css";
---

<section class="skills fade-in">
  <h2>Mis Habilidades y Herramientas</h2>

  <!-- Lenguajes y Plataformas -->
  <div class="skill-column" id="languages">
    <h3>Lenguajes y Plataformas</h3>
    <div class="skill html">
      <i class="fab fa-html5"></i>
      <span>HTML</span>
    </div>
    <div class="skill css">
      <i class="fab fa-css3-alt"></i>
      <span>CSS</span>
    </div>
    <div class="skill js">
      <i class="fab fa-js-square"></i>
      <span>JavaScript</span>
    </div>
    <div class="skill php">
      <i class="fab fa-php"></i>
      <span>PHP</span>
    </div>
    <div class="skill vb6">
      <i class="fas fa-code"></i>
      <span>VB6</span>
    </div>
    <div class="skill astro">
      <i class="fas fa-rocket"></i>
      <span>Astro</span>
    </div>

    <!-- Nuevos lenguajes añadidos -->
    <div class="skill java">
      <i class="fab fa-java"></i>
      <span>Java</span>
    </div>
    <div class="skill csharp">
      <i class="fas fa-code"></i> <!-- icono genérico para C# -->
      <span>C#</span>
    </div>
    <div class="skill python">
      <i class="fab fa-python"></i>
      <span>Python</span>
    </div>
    <div class="skill sql">
      <i class="fas fa-database"></i>
      <span>SQL</span>
    </div>
    <div class="skill android">
      <i class="fab fa-android"></i>
      <span>Android (Java/Kotlin)</span>
    </div>
  </div>

  <!-- Frameworks y Librerías -->
  <div class="skill-column" id="frameworks">
    <h3>Frameworks y Librerías</h3>
    <div class="skill react">
      <i class="fab fa-react"></i>
      <span>React</span>
    </div>
    <div class="skill angular">
      <i class="fab fa-angular"></i>
      <span>Angular</span>
    </div>
    <div class="skill vue">
      <i class="fab fa-vuejs"></i>
      <span>Vue</span>
    </div>
    <div class="skill three">
      <i class="fab fa-react"></i>
      <span>Three.js</span>
    </div>
  </div>

  <!-- Herramientas y Plataformas -->
  <div class="skill-column" id="tools">
    <h3>Herramientas y Plataformas</h3>
    <div class="skill git">
      <i class="fab fa-git-alt"></i>
      <span>Git</span>
    </div>
    <div class="skill xampp">
      <i class="fas fa-server"></i>
      <span>XAMPP</span>
    </div>
    <div class="skill sqlserver">
      <i class="fas fa-database"></i>
      <span>SQL Server</span>
    </div>
    <div class="skill docker">
      <i class="fab fa-docker"></i>
      <span>Docker</span>
    </div>
    <div class="skill vs2022">
      <i class="fas fa-code"></i>
      <span>Visual Studio 2022</span>
    </div>
    <div class="skill unity">
      <i class="fas fa-cube"></i> <!-- icono alternativo para Unity -->
      <span>Unity</span>
    </div>
    <div class="skill androidstudio">
      <i class="fas fa-laptop-code"></i> <!-- icono genérico para Android Studio -->
      <span>Android Studio</span>
    </div>
  </div>

  <!-- Nuevas habilidades Frontend -->
  <div class="skill-column" id="frontend-advanced">
    <h3>Frontend Avanzado</h3>
    <div class="skill tailwind">
      <i class="fas fa-wind"></i>
      <span>Tailwind CSS</span>
    </div>
    <div class="skill sass">
      <i class="fab fa-sass"></i>
      <span>Sass</span>
    </div>
    <div class="skill webpack">
      <i class="fas fa-cubes"></i>
      <span>Webpack</span>
    </div>
    <div class="skill babel">
      <i class="fas fa-code-branch"></i>
      <span>Babel</span>
    </div>
    <div class="skill jest">
      <i class="fas fa-vial"></i>
      <span>Jest</span>
    </div>
    <div class="skill eslint">
      <i class="fas fa-check-circle"></i>
      <span>ESLint</span>
    </div>
  </div>

</section>
